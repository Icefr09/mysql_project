<h1>Note details</h1>
    <div class="note-area">
    <div>'nid': <%= data.nid%></div>
    <div>'uid': <%= data.uid%></div>
    <div>'lid': <%= data.lid%></div>
    <div>'radius': <%= data.nradius%></div>
    <div>'content': <%= data.ntext%></div>
    <div>'Post_Time': <%= data.npostTime%></div>
    <div>'Allow comments': <%= data.nallow%></div>
    <div>'Comments':</div>
    <% if (!data1.length) { %>
        <div>No comments now</div>
    <% } else { %>
        <% data1.forEach(function(data1) { %>
            <div class="note-area">
                <div>'Written by user': <%= data1.uid%></div>
                <div>'Content': <%= data1.ctext%></div>
                <div>'Posted on': <%= data1.cpostTime%></div>
            </div>
        <% }); %>
    <% } %>

</div>

<h3>Add comment</h3>

<form method="post" action="/notes/comment?nid=<%=data.nid%>">
    <div class="form-group">
        <label>content</label>
        <input type="text" name="text" class="form-control" placeholder="text">
    </div>
    <button type="submit" class="btn btn-default">Post your comment now!</button>
</form>