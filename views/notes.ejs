                    <td align="center"><b><div><%= data.npostTime%></div></b></td>
                    <td align="center"><b><div><%= data.nallow%></div></b></td>
                    <td align="center"><b><div>
                                <a href="/notes/detail?nid=<%=data.nid%>">View</a>
                            </div></b></td>
                </tr>
            <% }); %>
        <% } %>
    </div>
</table>


