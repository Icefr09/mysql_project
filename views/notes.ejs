<h1>Notes you have posted</h1>
<table width="100%" border = "1">
    <thead>
    <th width = "100">nid</th>
    <th width = "100">uid</th>
    <th width = "100">lid</th>
    <th width = "100">nradius</th>
    <th width = "100">ntext</th>
    <th width = "100">npostTime</th>
    <th width = "100">nallow</th>
    <th width = "100">details</th>
    </thead>
    <div>
        <% if (!data.length) { %>
            <div>No active notes are available at this time and location! </div>
        <% } else { %>
            <% data.forEach(function(data) { %>
                <tr>
                    <td align="center"><b><div><%= data.nid%></div></b></td>
                    <td align="center"><b><div><%= data.uid%></div></b></td>
                    <td align="center"><b><div><%= data.lid%></div></b></td>
